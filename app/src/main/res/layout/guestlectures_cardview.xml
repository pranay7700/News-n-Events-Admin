<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <RelativeLayout
                android:layout_width="174dp"
                android:layout_height="177dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/guestlecture_profilepicIV"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    android:padding="8dp"
                    app:civ_border_color="@android:color/black"
                    app:civ_border_width="2dp"
                    app:layout_collapseMode="parallax" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="2dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/guestlecture_nameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="0dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/guestlecture_emailTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/guestlecture_nameTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="75dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="#000"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/guestlecture_dateTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/guestlecture_emailTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="108dp"
                    android:layout_marginEnd="34dp"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/guestlecture_timeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/guestlecture_dateTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="31dp"
                    android:textColor="#000"
                    android:textSize="15dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/guestlecture_descTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="192dp"
                android:textAlignment="gravity"
                android:textColor="#000" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>