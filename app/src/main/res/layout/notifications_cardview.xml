<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="124dp"
                android:layout_height="157dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/notifications_imageIV"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="39dp"
                    android:padding="4dp"
                    app:civ_border_color="@android:color/black"
                    app:civ_border_width="2dp"
                    app:layout_collapseMode="parallax" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="2dp"
                android:padding="7dp">

                <TextView
                    android:id="@+id/notifications_titleTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="0dp"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notifications_descTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notifications_titleTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="4dp"
                    android:textAlignment="gravity"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/notifications_dateTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notifications_descTV"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="110dp"
                    android:layout_marginEnd="34dp"
                    android:textColor="#000"
                    android:textSize="14dp" />


            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>